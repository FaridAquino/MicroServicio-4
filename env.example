# ===========================================
# VARIABLES DE ENTORNO PARA MICROSERVICIO4
# ===========================================

# Configuración de Base de Datos
DB_HOST=localhost
DB_PORT=5432
DB_NAME=microservicio4
DB_USER=postgres
DB_PASSWORD=password

# Configuración del Servidor
SERVER_PORT=8080

# Configuración de la Aplicación para Swagger
APP_NAME=MicroServicio4 API
APP_DESCRIPTION=API para gestión de dashboard y envío de emails globales
APP_VERSION=1.0.0
APP_CONTACT_NAME=Equipo de Desarrollo
APP_CONTACT_EMAIL=dev@example.com
APP_LICENSE_NAME=MIT License
APP_LICENSE_URL=https://opensource.org/licenses/MIT

# URL Base para Producción (importante para deployment)
# Esta variable determina la URL que aparecerá en Swagger UI
API_BASE_URL=https://api.tu-dominio.com

# Perfil de Spring
SPRING_PROFILES_ACTIVE=local

# ===========================================
# INSTRUCCIONES DE USO:
# ===========================================
# 1. Copia este archivo como .env
# 2. Modifica los valores según tu entorno
# 3. Para desarrollo local, usa los valores por defecto
# 4. Para producción, configura API_BASE_URL con tu dominio real
# 5. Para deployment en Docker, pasa estas variables como environment
